<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_title_layout"
    android:layout_alignParentTop="true"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="43dp">

    <TextView
        android:id="@+id/cutting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relative_pro"
        android:textColor="@color/global_pink"
        android:textSize="@dimen/bar_font_30"
        android:layout_centerInParent="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="30dp"
        android:layout_toRightOf="@id/cutting_tv"
        android:layout_centerVertical="true"
        android:background="@color/global_nav_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="30dp"
        android:layout_toLeftOf="@id/cutting_tv"
        android:layout_centerVertical="true"
        android:background="@color/global_nav_text"/>
</RelativeLayout>
