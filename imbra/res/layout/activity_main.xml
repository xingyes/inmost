<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"  
    android:background="@color/global_gray_light">  

    <com.xingy.lib.ui.NavigationBar
        android:layout_alignParentTop="true"
        android:id="@+id/main_navbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        inmost:leftVisiable="true"
        inmost:text="@string/app_name"
        inmost:actionBg="@color/transparent"
        inmost:drawableLeft="@drawable/nav_menu_nor"
        inmost:bgColor="@color/white"
        inmost:textColor="@color/global_pink"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_navbar"
        android:orientation="vertical"
        android:id="@+id/main_content"/>
    
    <TextView
        android:layout_below="@id/main_navbar"
        android:layout_width="wrap_content"
        android:id="@+id/empty_hint"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="@string/no_content"/>
    
    <!-- menu layout -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/menu_layout"
        android:background="#73000000"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/menu_content"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:background="#f3ffffff">
            <TextView
            android:id="@+id/call_help_tv"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_help_nor"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/global_text_info_color"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/call_help"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_layout"
                android:padding="20dp"
                android:layout_below="@id/call_help_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/no_head"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/user_img"/>
                <ImageView
                    android:layout_alignBottom="@id/user_img"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/no_head"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/user_img"
                    android:text="Carrie"
                    android:gravity="center"
                    android:textSize="@dimen/bar_font_24"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/global_nav_text"
                    android:id="@+id/user_name"/>

            </RelativeLayout>

            <!-- middle menu items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:layout_below="@id/user_layout">
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#80faa3c9"/>
                <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu_list_view"
                android:cacheColorHint="@color/transparent"
                android:listSelector="@color/transparent"
                android:dividerHeight="1px"
                android:divider="#80faa3c9"/>
                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#80faa3c9"/>
            </LinearLayout>
        </RelativeLayout>
        <!-- end of left menu -->
        <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/menu_content"
        android:id="@+id/menu_blank"/>
    </RelativeLayout>
    <!-- end of menu layout -->


    <!-- right filter layout-->
    <RelativeLayout
        android:id="@+id/option_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#73000000"
        android:visibility="gone">
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/opt_content"
            android:layout_width="240dp"
            android:background="#f3ffffff"
            android:paddingTop="18dp"
            android:layout_height="fill_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="10dp"
                android:id="@+id/extra_opt_tab"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/tab_brand_rb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="品牌"
                    android:textColor="@color/txt_pink_white_selector"
                    android:textSize="@dimen/bar_font_30"
                    android:gravity="center"
                    android:button="@drawable/none"
                    android:background="@drawable/button_pink_frame_round"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/tab_tag_rb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="功能"
                    android:textColor="@color/txt_pink_white_selector"
                    android:textSize="@dimen/bar_font_30"
                    android:gravity="center"
                    android:button="@drawable/none"
                    android:background="@drawable/button_pink_frame_round"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/tab_price_rb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="价格"
                    android:textColor="@color/txt_pink_white_selector"
                    android:textSize="@dimen/bar_font_30"
                    android:gravity="center"
                    android:button="@drawable/none"
                    android:background="@drawable/button_pink_frame_round"
                    android:checked="false"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:id="@+id/filter_button_layout"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/clear_filter"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="清空全部"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/long_pink_btn_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/submit_filter"
                    android:layout_marginLeft="10dp"
                    android:text="确认筛选"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/long_pink_btn_selector"/>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/extra_opt_tab"
                android:id="@+id/tab_vpager"
                android:layout_above="@id/filter_button_layout"
                android:visibility="gone"/>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:listSelector="@color/transparent"
                android:cacheColorHint="@color/transparent"

                android:layout_marginLeft="10dp"
                android:id="@+id/home_tag_grid"/>

        </RelativeLayout>
        <View
            android:id="@+id/opt_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/opt_content"/>
        </RelativeLayout>


    <include layout="@layout/global_loading" />
 </RelativeLayout>  