<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#FFF">  
  
    <com.xingy.lib.ui.NavigationBar
        android:layout_alignParentTop="true"
        android:id="@+id/submit_info_navbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        inmost:text="@string/alter_info"
        inmost:drawableLeft="@drawable/pink_icon_back"
        inmost:textColor="@color/global_pink"/>
    <TextView
        android:layout_below="@id/submit_info_navbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alter_label"
        android:layout_margin="6dp"
        android:textColor="@color/black"/>
    <EditText 
        android:layout_below="@id/alter_label"
        android:id="@+id/input_content"
        android:layout_margin="6dp"
       	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:minLines="2"
        android:maxLines="2"
        android:gravity="left|top"
        android:textColor="@color/black"
        android:background="@drawable/button_gray_round_frame_shape"/>
    <TextView 
        android:layout_marginTop="10dp"
		android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/input_content"
       	android:background="@drawable/pink_btn_selector"/>
    
</RelativeLayout>  