<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/global_text_info_color"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_img"
        android:src="@drawable/icon_status_on"
        android:layout_marginTop="18dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/status_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品状态： 抢购中"
        android:textColor="@color/global_text_info_color"
        android:textSize="@dimen/bar_font_24"/>
    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可选尺码"
        android:textColor="@color/global_text_info_color"
        android:textSize="@dimen/bar_font_24"/>
    <TextView
        android:id="@+id/shopping_sizes_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S  M  L"
        android:gravity="center"
        android:textColor="@color/global_text_info_color"
        android:textSize="@dimen/bar_font_24"/>

    <TextView
        android:layout_marginTop="23dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/shopping_go_btn"
        android:textSize="@dimen/bar_font_30"
        android:singleLine="true"
        android:text="@string/shopping"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:textColor="@color/white"
        android:background="@drawable/home_tag_choose_state"
        />
</LinearLayout>