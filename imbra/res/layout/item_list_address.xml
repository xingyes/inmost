<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/global_transparent_shadow_click_state"
    android:id="@+id/address_root_layout"
    android:padding="15dp">



    <LinearLayout
        android:id="@+id/right_opt_layout"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageView
            android:layout_marginRight="6dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/del_btn_selector"
            android:id="@+id/del_btn"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_btn_selector"
            android:id="@+id/edit_btn"/>
     </LinearLayout>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/picked_logo"
        android:layout_below="@id/right_opt_layout"
        android:src="@drawable/icon_succ"
        />

    <include
        android:id="@+id/left_address_layout"
        layout = "@layout/address_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/right_opt_layout"/>

</RelativeLayout>



