<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inmost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/order_del"
            android:src="@drawable/icon_del_nor"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bar_font_30"
            android:text="待付款"
            android:singleLine="true"
            android:id="@+id/order_status"/>
        <TextView
            android:layout_toRightOf="@id/order_status"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bar_font_24"
            android:textColor="@color/global_text_info_color"
            android:text="订单号:12123333333"
            android:singleLine="true"
            android:id="@+id/order_id"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/global_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/pro_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/pro_img"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bar_font_24"
            android:textColor="@color/global_text_info_color"
            android:text="订单号订单号订单号订单号订单号订单号订单号订单号订单号订单号"
            android:maxLines="2"
            android:id="@+id/pro_title"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/pro_img"
            android:layout_toRightOf="@id/pro_img"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bar_font_24"
            android:textColor="@color/global_nav_text"
            android:text="2015-07-02 14:00:00"
            android:singleLine="true"
            android:id="@+id/order_time"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_above="@id/order_time"
            android:layout_toRightOf="@id/pro_img"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bar_font_24"
            android:textColor="@color/global_pink"
            android:text="$123.0"
            android:singleLine="true"
            android:id="@+id/pro_price"/>

    </RelativeLayout></LinearLayout>