<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_param_group"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cup_param_group"
        android:gravity="center"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/extra_param_layout"
        android:orientation="horizontal"
        android:paddingLeft="13dp">
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/brand_param_layout">
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brand_param_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_font_24"
            android:background="@drawable/long_pink_round"
            android:text="brand"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_del"
            android:layout_alignRight="@id/brand_param_tv"
            android:layout_marginRight="-5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_param_layout">
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/func_param_tv"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/bar_font_24"
                android:background="@drawable/long_pink_round"
                android:text="tag"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_del"
                android:layout_alignRight="@id/func_param_tv"
                android:layout_marginRight="-5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_param_layout">
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_param_tv"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/bar_font_24"
                android:background="@drawable/long_pink_round"
                android:text="price"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_del"
                android:layout_alignRight="@id/price_param_tv"
                android:layout_marginRight="-5dp"/>
        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
